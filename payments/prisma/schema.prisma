datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id          String      @id @default(uuid())
  ticketId    String
  intentionId String
  refundId    String?
  amount      Int
  currency    String
  status      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now()) @updatedAt
}