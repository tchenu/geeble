datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          String      @id @default(uuid())
  name        String
  slug        String      @unique
  location    String
  organizer   String
  date        DateTime
  description String
  price       Float
  seats       Int
  userId      String
  companyId   String
  status      EventStatus @default(REWIEW)
  slots       Slot[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now()) @updatedAt
}

model Slot {
  id          String     @id @default(uuid())
  transaction String?
  quantity    Int
  event       Event      @relation(fields: [eventId], references: [id])
  eventId     String
  userId      String
  status      SlotStatus @default(PENDING)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
}

enum SlotStatus {
  PENDING
  CANCELED
  COMPLETED
  REFOUND
}

enum EventStatus {
  REWIEW
  CANCELED
  PUBLISHED
}
